<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
            <variable
                name="vm"
                type="com.tech.arch.ui.dummy_activity.DummyMapFragmentVm" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.dummy_activity.DummyMapFragment">


        <fragment
            android:id="@+id/mapView"
            class="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingBottom="@dimen/_25sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etSearch"
            style="@style/TextView.Regular"
            android:layout_width="0dp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/bg_cards"
            android:backgroundTint="@color/white"
            android:hint="search here"
            android:visibility="gone"
            android:textColorHint="@color/app_blue"
            android:textColor="@color/black"
            android:paddingHorizontal="@dimen/_10sdp"
            android:singleLine="true"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintEnd_toStartOf="@id/ivFilter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/homeProfile"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:src="@drawable/home_profile_icon"
            android:layout_marginEnd="@dimen/_15sdp"
            android:visibility="gone"
            android:onClick="@{ v -> vm.onClick(v)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/etSearch"
            app:layout_constraintBottom_toBottomOf="@id/etSearch"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivFilter"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:src="@drawable/iv_filter_icon"
            android:visibility="gone"
            android:layout_marginEnd="@dimen/_10sdp"
            app:layout_constraintTop_toTopOf="@id/homeProfile"
            app:layout_constraintBottom_toBottomOf="@id/homeProfile"
            app:layout_constraintEnd_toStartOf="@id/homeProfile"/>


        <LinearLayout
            android:id="@+id/linearItems"
            android:layout_width="@dimen/_38sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_60sdp"
            android:background="@drawable/bg_cards"
            android:backgroundTint="@color/bottomNavColor"
            android:gravity="center_horizontal"
            android:visibility="gone"
            android:paddingBottom="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/iv_folder"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@null"
                android:contentDescription="@string/rectangle"
                android:onClick="@{v -> vm.onClick(v)}"
                android:src="@drawable/iv_files" />

            <ImageView
                android:id="@+id/iv_bookmark"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@null"
                android:contentDescription="@string/rectangle"
                android:onClick="@{v -> vm.onClick(v)}"
                android:src="@drawable/iv_bookmark" />

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@null"
                android:contentDescription="@string/rectangle"
                android:onClick="@{v -> vm.onClick(v)}"
                android:src="@drawable/iv_share" />

            <ImageView
                android:id="@+id/iv_like"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@null"
                android:contentDescription="@string/rectangle"

                android:onClick="@{v -> vm.onClick(v)}"
                android:src="@drawable/iv_like" />

            <ImageView
                android:id="@+id/iv_disLike"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@null"
                android:contentDescription="@string/rectangle"

                android:onClick="@{v -> vm.onClick(v)}"
                android:src="@drawable/iv_dislike" />

            <ImageView
                android:id="@+id/ivCaution"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@null"
                android:contentDescription="@string/rectangle"
                android:onClick="@{v -> vm.onClick(v)}"
                android:src="@drawable/iv_caution" />

            <ImageView
                android:id="@+id/iv_highlight"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@null"
                android:contentDescription="@string/rectangle"
                android:onClick="@{v -> vm.onClick(v)}"
                android:src="@drawable/iv_heighlight" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>